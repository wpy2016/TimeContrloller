<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <Button
        android:id="@+id/id_ac_main_btn_changto_slient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="改变情景模式至静音" />

    <Button
        android:id="@+id/id_ac_main_btn_changto_shake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="改变情景模式至震动" />

    <Button
        android:id="@+id/id_ac_main_btn_changto_ling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="改变情景模式至响铃" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
android:gravity="center_vertical"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前情景模式" />

        <TextView
            android:id="@+id/id_ac_main_tv_situation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Slient" />
    </LinearLayout>


</LinearLayout>
