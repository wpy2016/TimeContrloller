<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:semesterpicker="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pop_bg"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="10dp"
    android:paddingTop="15dp">

    <com.wpy.faxianbei.sk.ui.wheelview.SemesterPicker
        android:id="@+id/id_pop_select_semester"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center"
        semesterpicker:layout_id="@layout/semester_picker" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/id_pop_select_semester_cancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/cancel"
            android:textColor="#067e47"
            android:textSize="16sp" />

        <Button
            android:id="@+id/id_pop_select_semester_confirm"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical|center_horizontal"
            android:text="чбошод"
            android:textColor="#067e47"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>