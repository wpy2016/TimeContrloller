<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:semesterpicker="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pop_bg"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="10dp"
    android:paddingTop="15dp">


    <com.wpy.faxianbei.sk.ui.wheelview.WheelView
        android:id="@+id/pop_ac_coursetable_wheel_weeks"
        android:layout_height="150dp"
        android:layout_width="match_parent"
        style="@style/wheelViewStyle" />
<LinearLayout
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="35dp"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:text="当前周是:"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/id_pop_select_week_et_week"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:inputType="number"
        android:gravity="center"
        android:background="@null"
        android:textSize="15sp"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/id_pop_select_week_cancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/cancel"
            android:textColor="#067e47"
            android:textSize="16sp" />

        <Button
            android:id="@+id/id_pop_select_week_confirm"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical|center_horizontal"
            android:text="确认"
            android:textColor="#067e47"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>