<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="266dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="235dp"
        android:layout_marginTop="62dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="40dp"
        android:background="@drawable/edit_background"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"

        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/schoolid"
            android:scaleType="fitXY"/>

        <EditText
            android:id="@+id/id_ac_login_ev_schoolid"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@null"
            android:gravity="center"
            android:inputType="number"
            android:textSize="14sp"
            android:textColor="#000000"
            android:hint="输入学号"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="235dp"
        android:layout_marginTop="22dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="40dp"
        android:background="@drawable/edit_background"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/password"
            android:scaleType="fitXY"/>

        <EditText
            android:id="@+id/id_ac_login_ev_schoolpass"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@null"
            android:gravity="center"
            android:inputType="textPassword"
            android:textSize="14sp"
            android:textColor="#000000"
            android:hint="输入密码"/>
    </LinearLayout>

    <Button
        android:id="@+id/id_ac_login_btn_login"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@drawable/register_btn_background"
        android:layout_marginTop="28sp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#067e47"
        android:text="登录"/>
</LinearLayout>