<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_share_web">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/id_ac_share_iv_share"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/share_new"
            android:layout_alignParentRight="true" />

        <ImageView
            android:id="@+id/id_ac_share_iv_share_in_owner"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_toLeftOf="@id/id_ac_share_iv_share"
            android:src="@drawable/share_own"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:background="@drawable/share_plane"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/id_ac_share_iv_screenshot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:layout_marginRight="13dp"
            android:layout_marginBottom="16dp"/>

    </RelativeLayout>

    <EditText
        android:id="@+id/id_ac_share_et_share_content"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:hint="@string/share_hint"
        android:padding="10dp"
        android:inputType="textMultiLine"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:background="@drawable/round_rect"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>
