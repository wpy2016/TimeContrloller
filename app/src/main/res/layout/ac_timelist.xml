<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_share_web"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/share_plane">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_ac_timelist_tv_showtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="2017.01.07"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="15dp"
                android:textColor="#067e47"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/id_ac_timelist_lv_showtimelist"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="30dp">

            </ListView>


            <ImageView
                android:id="@+id/id_ac_timelist_iv_addtime"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/add_list_time" />
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>
