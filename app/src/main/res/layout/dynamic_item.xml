<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/id_dynamic_item_iv_user_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="13dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_user" />

        <TextView
            android:id="@+id/id_dynamic_item_iv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/id_dynamic_item_iv_user_img"
            android:text="@string/chongqinguiversity"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/id_dynamic_item_tv_dynamic_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="162dp">

        <ImageView
            android:id="@+id/id_dynamic_item_tv_dynamic_img"
            android:layout_width="91dp"
            android:layout_height="162dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="92dp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/id_dynamic_item_tv_dynamic_like"
                android:layout_width="21dp"
                android:layout_height="19dp"
                android:scaleType="fitXY"
                android:src="@drawable/like_black" />

            <ImageView
                android:id="@+id/id_dynamic_item_tv_dynamic_comment"
                android:layout_width="23dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/comment" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
