<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fcffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/id_dynamic_item_rl_user_img"
            android:layout_width="45dp"
            android:layout_height="51dp"
            android:background="@drawable/user_surround"
            android:layout_marginLeft="22dp">
            <ImageView
                android:id="@+id/id_dynamic_item_iv_user_img"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@drawable/default_user" />
        </RelativeLayout>



        <TextView
            android:id="@+id/id_dynamic_item_iv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/id_dynamic_item_rl_user_img"
            android:text="@string/chongqinguiversity"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/id_dynamic_item_tv_dynamic_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="92dp"
        android:layout_marginRight="30dp"
        android:inputType="textMultiLine"
        android:textColor="@color/my_view_text"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="162dp">

        <ImageView
            android:id="@+id/id_dynamic_item_tv_dynamic_img"
            android:layout_width="91dp"
            android:layout_height="162dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="92dp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_dynamic_item_tv_dynamic_like_count"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:text="100"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:textColor="@color/my_view_text"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/id_dynamic_item_iv_dynamic_like"
                android:layout_width="19dp"
                android:layout_height="21dp"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical"
                android:src="@drawable/like_selector" />



            <ImageView
                android:id="@+id/id_dynamic_item_tv_dynamic_comment"
                android:layout_width="23dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/comment" />

        </LinearLayout>
    </RelativeLayout>
    <View
        android:id="@+id/id_dynamic_item_comment_divider"
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_height="1dp"
        android:background="@drawable/divider" />

    <TextView
        android:id="@+id/id_ac_dynamic_tv_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="20dp"
        android:textSize="13sp"
        android:textColor="@color/my_view_text"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/divider" />
</LinearLayout>
