<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ac_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/id_ac_register_iv_head"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:src="@drawable/default_head" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <android.support.v4.view.ViewPager
            android:id="@+id/id_ac_register_vp_registerlogin"
            android:layout_width="240dp"
            android:layout_height="266dp"
            android:layout_gravity="center_horizontal" />

        <com.wpy.faxianbei.sk.ui.CircleIndicator
            android:id="@+id/id_ac_register_circle_indicator"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="clip_horizontal"
            app:ci_animator="@animator/indicator_animator"
            app:ci_animator_reverse="@animator/indicator_animator_reverse"
            app:ci_drawable="@drawable/black_radius_square"
            app:ci_height="4dp"
            app:ci_margin="6dp"
            app:ci_width="10dp" />

        <TextView
            android:id="@+id/id_ac_register_btn_tologin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:text="向右划可以去登录哦..."
            android:textColor="#067e47"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>

