<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Swipe.Back" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 向右划进入前一个界面-->
    <style name="ThemeSwipeBack" parent="Theme.Swipe.Back">
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryDark">#3F51B5</item>
    </style>

    <!--全屏的样式，没有title，没有actionbar-->
    <style name="AppTheme.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <!--WheelView控件的样式-->
    <style name="wheelViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="itemNumber">3</item>
        <item name="lineColor">@android:color/transparent</item>
        <item name="bottomLineColor">#f5f5dc</item>
        <item name="lineHeight">3dp</item>
        <item name="firstLineAndSecondLineSpace">3dp</item>
        <item name="maskHight">27dp</item>
        <item name="noEmpty">true</item>
        <item name="normalTextColor">#99bfbfbf</item>
        <item name="normalTextSize">14sp</item>
        <item name="selectedTextColor">#4d4d4d</item>
        <item name="selectedTextSize">16sp</item>
        <item name="unitHight">25dp</item>
    </style>
</resources>
